// Place your key bindings in this file to overwrite the defaults
[
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusPreviousGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusPanel"
  },
  {
    "key": "shift+cmd+[",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "shift+cmd+]",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "cmd+space",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+space",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+j",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+alt+d",
    "command": "todo.editorToggleDone"
  },
  {
    "key": "ctrl+shift+alt+s",
    "command": "todo.editorToggleStart"
  },
  {
    "key": "ctrl+shift+alt+c",
    "command": "todo.editorToggleCancelled"
  },
  {
    "key": "ctrl+k w",
    "command": "-vscodeWorkspaceSwitcher.openWorkspace"
  },
  {
    "key": "cmd+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "cmd+n",
    "command": "extension.advancedNewFile"
  },
  {
    "key": "alt+cmd+n",
    "command": "-extension.advancedNewFile"
  },
  {
    "key": "ctrl+k",
    "command": "-deleteAllRight",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+k ctrl+w",
    "command": "-vscodeWorkspaceSwitcher.openWorkspaceInNewWindow"
  },
  {
    "key": "ctrl+k shift+w",
    "command": "-vscodeWorkspaceSwitcher.saveWorkspace"
  }
]